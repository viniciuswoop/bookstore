<h4>Book Info</h4>

<dl class="px-1 m-0">

	<div class="row">
		<div class="col-12">
			<div class="row">
				<div class="col-8">
					<RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Book</RadzenText>
					<RadzenTextBox Style="width: 100%" aria-label="Default TextBox" @bind-Value="@Value.BookTitle" Disabled=true />
					<ValidationMessage For="@(() => Value.BookTitle)" />
				</div>

				<div class="col-4">
					<RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Amount</RadzenText>
					<RadzenNumeric Style="width: 100%" @bind-Value=@Value.Amount />
					<ValidationMessage For="@(() => Value.Amount)" />
				</div>
			</div>
		</div>
	</div>
</dl>